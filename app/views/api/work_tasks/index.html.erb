<p id="notice"><%= notice %></p>

<h1>Listing Work Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Task title</th>
      <th>Work</th>
      <th>Expired at</th>
      <th>Task description</th>
      <th>User</th>
      <th>People work for</th>
      <th>Notification list</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @work_tasks.each do |work_task| %>
      <tr>
        <td><%= work_task.task_title %></td>
        <td><%= work_task.work_id %></td>
        <td><%= work_task.expired_at %></td>
        <td><%= work_task.task_description %></td>
        <td><%= work_task.user_id %></td>
        <td><%= work_task.people_work_for %></td>
        <td><%= work_task.notification_list %></td>
        <td><%= link_to 'Show', work_task %></td>
        <td><%= link_to 'Edit', edit_work_task_path(work_task) %></td>
        <td><%= link_to 'Destroy', work_task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

