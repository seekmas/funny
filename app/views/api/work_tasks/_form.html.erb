<%= simple_form_for(@work_task) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :task_title %>
    <%= f.input :work_id %>
    <%= f.input :expired_at %>
    <%= f.input :task_description %>
    <%= f.input :user_id %>
    <%= f.input :people_work_for %>
    <%= f.input :notification_list %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
